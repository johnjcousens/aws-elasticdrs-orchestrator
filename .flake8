[flake8]
max-line-length = 79
max-complexity = 10
select = E,W,F,C,N
ignore = 
    E203,
    W503,
    W504,
    E501,
    C901,
    F401,
    F841,
    F541,
    E231,
    E713,
    E221,
    E702,
    N806
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    lambda/package,
    .mypy_cache,
    .pytest_cache,
    frontend,
    node_modules,
    archive,
    reports,
    .kiro,
    .cline_memory
per-file-ignores =
    __init__.py:F401,F403
    **/migrations/*.py:E501
    scripts/analyze_violations.py:C901
    scripts/generate_quality_report.py:C901
docstring-convention = pep257
import-order-style = pep8
enable-extensions = N801,N802,N803,N804,N805,N806,N807,N811,N812,N813,N814,N815,N816,N817,N818
extend-ignore = 
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D107
show-source = True
statistics = True
count = True