# Flake8 Configuration for PEP 8 Compliance
# AWS DRS Orchestration Python Coding Standards

[flake8]
# PEP 8 standard line length
max-line-length = 79

# Complexity threshold
max-complexity = 10

# Error and warning codes to check
select = E,W,F,C

# Ignore specific codes that conflict with Black or are outdated
ignore = E203,W503,E501

# Directories and files to exclude from linting
exclude = .git,__pycache__,.venv,venv,build,dist,*.egg-info,lambda/package,.mypy_cache,.pytest_cache,frontend,node_modules,archive,reports,.kiro

# Per-file ignores for specific patterns
per-file-ignores =
    __init__.py:F401,
    **/migrations/*.py:E501

# Docstring conventions
docstring-convention = pep257

# Import order checking
import-order-style = pep8